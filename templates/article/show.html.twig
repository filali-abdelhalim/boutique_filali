{% extends 'base.html.twig' %}

{% block title %} {{article.NomArt}} {% endblock %}

{% block body %}


  <div class="col-md-4">
        <p class="card-text"> {{article.NomArt}} </p>
            <div class="card mb-3 shadow-sm">
             {% if article.Promo %} 
                        <p class="text card-text text-warning">En promotion </p>
             {% endif %}
                    {# <img src="{{ article.Image }}" class="d-block w-50 h-50" alt="{{article.NomArt}}"> #}
                         <img src="{{asset('images/articles/'~article.imageName) }}" style="width: 100%;height: auto" alt="...">
                <div class="card-body">
                    <p class="card-text">{{ article.Description|slice(0, 50) }}...</p>
                    <div class="card-body">
                        <p class="card-text text-primary" style="font-weight: bold; font-size: 1.5rem;">{{ article.PrixInitial | number_format(0,',',' ') }} € HT </p>
                   
                        <p class="card-text text-primary" style="font-weight: bold; font-size: 1.5rem;">{{ article.PrixFinal | number_format(0,',',' ') }} € TTC </p>

                    </div>
                    <a href="{{ path('caddy_add', {"id": article.id}) }}" class="btn btn-success float-right"><i class="fas fa-shopping-cart mr-1"></i> Ajouter au panier </a>

                </div>
            </div>    
      
    </div>



{% endblock %}