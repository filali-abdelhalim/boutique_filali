{% extends 'base.html.twig' %}

{% block title %} Caddy {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 600px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<div class="bg-light p-3">
   <h1> votre panier </h1>
</div>

{% if panier | length > 0 %}
   
   <table class="table">

      <thead>

            <tr>
                 <th> Article </th>
                 <th> Prix </th>
                 <th> Quantité </th>
                 <th> Totale </th>
                 <th> </th>
             </tr>
     </thead>

     <tbody>
     {% for Art in panier %}
            <tr>
            {# <img src="{{ Art.article.Image }}" class="d-block w-50 h-50"> #}
                <td> {{ Art.article.NomArt}}    </td>
                <td> {{ Art.article.PrixInitial}} </td>
                <td> {{ Art.quantité}} </td>
                <td> {{ Art.article.PrixInitial * Art.quantité }} </td>
                <td> 
                <a href="{{ path('caddy_remove',{"id": Art.article.id}) }}" class="btn btn-danger btn-sm"> <i class="fas f-trash"><i/></a>
                </td>
                <td>
                <a href="{{ path('caddy_supprime', {"id": Art.article.id}) }}" class="btn btn-sm btn-outline-secondary" > - </a>
                </td>
                <td>
                <a href="{{ path('caddy_add', {"id": Art.article.id}) }} " class="btn btn-success btn-sm float-right"> + </a>
                </td>

            </tr>
    {% endfor %}

    </tbody>
   
    <tfoot>
            <tr>
               <td colspan="3" class="text-right"> Total HT: </td>
               <td> {{ total}} € </td>
            </tr>
             <tr>
               <td colspan="3" class="text-right"> TVA: </td>
               <td> {{ tva}} € </td>
            </tr>
            <tr>
               <td colspan="3" class="text-right"> Total TTC: </td>
               <td> {{ generale }} € </td>
            </tr>
     </tfoot>      

   </table>

{% else %}

<p> votre panier est vide </p>

{% endif %}

    
   
</div>
{% endblock %}
