
{% extends 'base.html.twig' %}

{% block title %} tout les produites !{% endblock %}


{% block body %}


<style>
       
    .filter { position: sticky; display: block ; top: 20px;  }
</style>

  {# <main role="main"> #}

      <h1>tout les produites disponibles  </h1>

            <div class="container d-inline">
                
                <div class="row" >
                
                 {# pour separer le filter  #}

                        <div class="col-md-2 bg-light d-inline mr-2 ml-5">  

                            {% include 'article/filter.html.twig' with {form : form} only %} 
                        </div>

        <div class="bg-light displayList" >
       
                <div class="card-body " >

        {% for art in articles %}
        <div  class="col-4 d-inline">

                <p class="card-text" style="font-weight: bold; font-size: 1.5rem;"> {{art.NomArt}} </p>
                    <div class="card mb-1 shadow-sm d-block ">
                {% if art.Promo %} 
                        <p class="text card-text text-warning">En promotion </p>
                {% endif %}
              
                        {# <img src="{{ art.Image }}" class="w-50 h-50" alt="{{art.NomArt}}"> #}
                         <img src="{{asset('images/articles/'~art.imageName) }}" style="width: 30%;height: auto" alt="...">

                        <div class="card-body">
                            <p class="card-text">{{ art.Description|slice(0, 50) }}...</p>
                        
                              {#   pour afficher deux number apres virgule  | number_format(0,',','') #}
                            <div class="card-body">
                                <p class="card-text text-primary " style="font-weight: bold; font-size: 1.5rem;">{{ art.PrixInitial }} € HT </p> 
                            
                                <p class="card-text text-primary" style="font-weight: bold; font-size: 1.5rem;">{{ art.PrixFinal }}  € TTC </p>

                                    {# <div class="btn-group"> #}

                                        <a href="{{ path('article_show', {"id": art.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                                        <a href="{{ path('caddy_add', {"id": art.id}) }} " class="btn btn-success btn-sm"><i class="fas fa-shopping-cart mr-1"></i> Ajouter au panier </a>

                                            {% if is_granted('ROLE_ADMIN') %} 
                                        <a href="{{ path('article_edit', {"id": art.id}) }}" class="btn btn-sm btn-outline-secondary">Editer</a>
                                        <a href="{{ path('article_delete', {"id": art.id}) }}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'article selectionnez')">Supprimer</a>
                                            {% endif %}
                                    
                                    {# </div> #}
                            </div>
                        </div>
                    </div>
               
                  </div>                              
        {% endfor %}
                      </div>
                         <div class="pagination">
        {{ knp_pagination_render(articles) }}
    </div>
                    </div>
                </div>
            </div>

    {# </main><!-- /.container --> #}

{% endblock %}