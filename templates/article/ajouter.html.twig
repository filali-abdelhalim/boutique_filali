{% extends 'base.html.twig' %}

{% block title %} Article!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 400px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="example-wrapper">

    <h2> Ajouter un Article  âœ…</h2>

  {{ form_start(form) }}

    {{ form_rest(form) }} 
        <button class="btn btn-primary">
        Ajouter
    </button>

    {{ form_end(form) }}

</div>

<h2>  table des articles </h2>

    <table class="table bg-light">

            <thead>

                  <tr>
                      <th> nom </th>  
                      <th> description </th>                
                      <th> image </th>                
                      <th> prix initial </th>                
                      <th> prix finale </th>                
                      <th> promo </th>  
                      <th> supprission </th>  
                      <th> modifier </th>                
                  </tr>
          </thead>

          <tbody>

        {% for art in articles %}
      
                  <tr>
                      <td> {{ art.NomArt }}    </td>
                      <td> {{ art.Description }}   </td>
                      <td>
                         <img src="{{asset('images/articles/'~art.imageName) }}" 
                         style="width: 30%;height: auto" alt="...">
                      </td>
                      <td> {{ art.PrixInitial }}    </td>
                      <td> {{ art.PrixFinal }}    </td>
                      <td> {{ art.Promo }}    </td>

                      <td> 
                      <a href="{{ path('article_delete',{"id": art.id}) }}" onclick="return confirm('Attention ce ci va supprimer l\'article selectionnez')" > <i class="fas fa-trash"></i></a>
                      </td>
                      <td> 
                      <a href="{{ path('article_edit',{"id": art.id}) }}" > <i class="fas fa-edit"></i></a>
                      </td>
                      
                  </tr>
          {% endfor %}

          </tbody>
      
    </table>

{% endblock %}
