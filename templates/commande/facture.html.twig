{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
<div class="example-wrapper">
   {{client.nomCli}}
   <div>
    {{client.prenomCli}}

</div>
     {{client.adresse}}
      {{client.ville}}
       {{client.CP}}
        {{client.telephone}}
</div>
<div class="example-wrapper">
    <h1> Facture N° {{facture.id}} </h1>

    <table class="table">

      <thead>

            <tr>
                 <th> Article </th>
                 <th> Prix </th>
                 <th> Quantité </th>
                 <th> Totale </th>
                 <th> </th>
             </tr>
     </thead>

     <tbody>
     {% for Art in articles %}
            <tr>
            {# <img src="{{ Art.article.Image }}" class="d-block w-50 h-50"> #}
                <td> {{ Art.article.NomArt}}    </td>
                <td> {{ Art.article.PrixInitial }} </td>
                <td> {{ Art.quantité}} </td>
                <td> {{ Art.article.PrixInitial  * Art.quantité  }} </td>
                

            </tr>
    {% endfor %}

    </tbody>
   
    <tfoot>
            <tr>
               <td colspan="3" class="text-right"> Total HT: </td>
               <td> {{ total | number_format(0,',',' ') }} € </td>
            </tr>
             <tr>
               <td colspan="3" class="text-right"> TVA: </td>
               <td> {{ tva | number_format(0,',',' ') }} € </td>
            </tr>
            <tr>
               <td colspan="3" class="text-right"> Total TTC: </td>
               <td> {{ generale | number_format(0,',',' ') }} € </td>
            </tr>
     </tfoot>      

   </table>
   <a href="{{ path('facture_print') }}  " target="_blank" class="btn btn-success btn-sm target_blank"> imprimer </a>
    
   <a href="{{ path('menu') }} " class="btn btn-primary btn-sm  "></i> Annuler </a>



{% endblock %}
