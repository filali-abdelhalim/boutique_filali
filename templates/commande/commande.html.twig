                </td>
                {# <td> <a href="{{ path('commande_delete',{"id": com.getId()}) }} " >
                <i class="fas fa-trash-alt"></i> supprission </a> </td>
 #}

            </tr>
    {% endfor %}

    </tbody>
  
   </table>
    
{% endblock %}
