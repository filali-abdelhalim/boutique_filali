
{% extends 'base.html.twig' %}


{% block title %} registration  {% endblock %}


{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 400px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1> inscription </h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label':'nom utilisateur','attr':{'placeholder':'votre nom utilisateur'}}) }}
    {{ form_row(form.email, {'label':'email','attr':{'placeholder':'votre nom email'}}) }}
    {{ form_row(form.password, {'label':'password','attr':{'placeholder':'votre mot de passe'}}) }}
    {{ form_row(form.confirme_password, {'label':'confirmer password','attr':{'placeholder':'confirmation votre mot de passe '}}) }}

    <button type="submit" class="btn btn-success w-100"> inscription </button>

    {{ form_end(form)}}

</div>

{% endblock %}